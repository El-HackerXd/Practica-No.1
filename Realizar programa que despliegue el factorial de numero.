using System;

class Factorial
{
    static void Main(string[] args)
    {
        int n, i, fact;
        Console.Write("Ingrese un n√∫mero entero positivo: ");
        n = Convert.ToInt32(Console.ReadLine());
        fact = 1;
        for (i = 1; i <= n; i++)
        {
            fact = fact * i;
        }
        Console.WriteLine("El factorial de {0} es {1}", n, fact);
        Console.ReadLine();
    }
}
